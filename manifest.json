{
  "manifest_version": 3,
  "name": "Tag Extension Manager",
  "version": "0.1.0",
  "description": "A free and open-source Chrome extension to manage other extensions",
  "permissions": ["management", "storage", "activeTab", "offscreen", "sidePanel"],
  "action": {
    "default_icon": {
      "16": "icons/color/icon16.png",
      "48": "icons/color/icon48.png",
      "128": "icons/color/icon128.png"
    }
  },
  "icons": {
    "16": "icons/color/icon16.png",
    "48": "icons/color/icon48.png",
    "128": "icons/color/icon128.png"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "options_page": "options.html",
  "side_panel": {
    "default_path": "options.html"
  }
}
