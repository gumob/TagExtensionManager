{
  "manifest_version": 3,
  "name": "Tag Extension Manager",
  "version": "0.0.1",
  "description": "A Chrome extension to manage other extensions",
  "permissions": ["management", "storage", "activeTab", "offscreen"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/color/icon16.png",
      "48": "icons/color/icon48.png",
      "128": "icons/color/icon128.png"
    }
  },
  "icons": {
    "16": "icons/color/icon16.png",
    "48": "icons/color/icon48.png",
    "128": "icons/color/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
