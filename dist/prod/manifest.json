{
  "manifest_version": 3,
  "name": "Extension Manager",
  "version": "1.0.0",
  "description": "A Chrome extension to manage other extensions",
  "permissions": [
    "management",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/light/icon16.png",
      "48": "icons/light/icon48.png",
      "128": "icons/light/icon128.png"
    }
  },
  "icons": {
    "16": "icons/light/icon16.png",
    "48": "icons/light/icon48.png",
    "128": "icons/light/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
} 